<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nen4"
    tools:context=".themLopActivity">

    <EditText
        android:id="@+id/STTLOP"
        android:layout_width="250dp"
        android:layout_height="46dp"
        android:layout_marginTop="208dp"
        android:background="@drawable/text_costom"
        android:ems="10"
        android:hint="STT"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/MALOPNEW"
        android:layout_width="250dp"
        android:layout_height="46dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/text_costom"
        android:ems="10"
        android:hint="Tên Lớp"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/STTLOP" />

    <EditText
        android:id="@+id/TENLOPNEW"
        android:layout_width="250dp"
        android:layout_height="46dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/text_costom"
        android:ems="10"
        android:hint="Mã Lớp"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MALOPNEW" />

    <Button
        android:id="@+id/buttonThemLopNew"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="155dp"
        android:background="@drawable/costom_button"
        android:text="Thêm"
        app:backgroundTint="@color/an6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.653"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TENLOPNEW" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="390dp"
        android:layout_height="136dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fpt"
        tools:srcCompat="@drawable/fpt" />
</androidx.constraintlayout.widget.ConstraintLayout>