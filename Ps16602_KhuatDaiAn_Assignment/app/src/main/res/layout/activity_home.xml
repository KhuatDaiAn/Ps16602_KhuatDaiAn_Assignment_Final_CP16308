<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".Home">

    <Button
        android:id="@+id/qlsv"
        android:layout_width="148dp"
        android:layout_height="148dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/costom_button"
        android:paddingLeft="5dp"
        android:text="Quản lý SV"
        android:textColor="@color/black"
        app:backgroundTint="@color/b"
        app:icon="@drawable/icons8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/banDo"
        android:layout_width="148dp"
        android:layout_height="148dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/costom_button"
        android:paddingLeft="5dp"
        android:text="Bản đồ"
        android:textColor="@color/black"
        app:backgroundTint="@color/an6"
        app:icon="@drawable/icons8_location_60px"
        app:layout_constraintStart_toEndOf="@+id/qlsv"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fpt" />

    <Button
        android:id="@+id/btnNew"
        android:layout_width="148dp"
        android:layout_height="148dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/costom_button"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="New"
        android:textColor="@color/black"
        app:backgroundTint="@color/an2"
        app:icon="@drawable/icons8_new_64px"
        app:iconPadding="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qlsv" />

    <Button
        android:id="@+id/btnSocial"
        android:layout_width="148dp"
        android:layout_height="148dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/costom_button"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Social"
        android:textColor="@color/black"
        app:backgroundTint="@color/an5"
        app:icon="@drawable/icons8_volunteering_60px"
        app:iconPadding="0dp"
        app:layout_constraintStart_toEndOf="@+id/btnNew"
        app:layout_constraintTop_toBottomOf="@+id/banDo" />

</androidx.constraintlayout.widget.ConstraintLayout>